<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_App.Views.AddEditNotePage"
             x:Name="AddEditPage"
             Title="Add/Edit Note">
    <VerticalStackLayout>
        <Entry Placeholder="Title" Text="{Binding Note.Title}" />
        <Editor Placeholder="Content" Text="{Binding Note.Content}" />
        <Button Text="Save" Command="{Binding SaveNoteCommand}" />
    </VerticalStackLayout>
</ContentPage>
