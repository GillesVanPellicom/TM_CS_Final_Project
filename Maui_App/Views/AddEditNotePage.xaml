<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:Maui_App.ViewModels"
             x:Class="Maui_App.Views.AddEditNotePage"
             x:Name="AddEditPage"
             Title="Add/Edit Note"
             x:DataType="ViewModels:AddEditNoteViewModel">
    <VerticalStackLayout Padding="10">
        <Entry Placeholder="Title" Text="{Binding Note.Title}" IsTextPredictionEnabled="False"/>
        <Editor Placeholder="Content" Text="{Binding Note.Content}" IsTextPredictionEnabled="False" HeightRequest="500" VerticalOptions="FillAndExpand"/>
        <HorizontalStackLayout Spacing="10">
            <Button Text="Save" Command="{Binding SaveNoteCommand}" />
            <Button Text="Delete" Command="{Binding DeleteNoteCommand}" IsVisible="{Binding Note.Id, Converter={StaticResource IntToBoolConverter}}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
